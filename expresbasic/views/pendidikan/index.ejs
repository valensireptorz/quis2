<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Daftar Pendidikan Mahasiswa</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <div class="container mt-5">
    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert">
      <%= messages.success %>
    </div>
    <% } else if (messages.error) { %>
    <div class="alert alert-danger" role="alert">
      <%= messages.error %>
    </div>
    <% } %>

    <div class="row">
      <div class="col">
        <a href="/pendidikan/create" class="btn btn-sm btn-success">Tambah</a>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nama Instansi</th>
              <th scope="col">Jurusan</th>
              <th scope="col">Tahun Masuk</th>
              <th scope="col">Tahun Lulus</th>
              <th scope="col">Nomor Ijazah</th>
              <th scope="col">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% for (var i = 0; i < data.length; i++) { %>
            <tr>
              <th scope="row"><%= (i + 1) %></th>
              <td><%= data[i].nama_instansi %></td>
              <td><%= data[i].jurusan %></td>
              <td><%= data[i].tahun_masuk %></td>
              <td><%= data[i].tahun_lulus %></td>
              <td><%= data[i].nomor_ijazah %></td>
              <td>
                <a href="/pendidikan/edit/<%= data[i].id_pendidikan %>" class="btn btn-sm btn-warning">Edit</a>
                <a href="/pendidikan/delete/<%= data[i].id_pendidikan %>" class="btn btn-sm btn-danger">Delete</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
  </script>
</body>

</html>
